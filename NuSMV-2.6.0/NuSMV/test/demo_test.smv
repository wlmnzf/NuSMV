MODULE Predictor(attacker,victim)
VAR
Predict:{nop,TSuccess,TFailed,NTSuccess,NTFailed};

ASSIGN
next(Predict):=case
    attacker.cmd=branch|victim.cmd=branch:{TSuccess,TFailed,NTSuccess,NTFailed};
    TRUE:nop;
esac;




